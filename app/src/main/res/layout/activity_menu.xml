                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbyMultigraincerealbread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby's Multi grain cereal bread Ksh 220"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbysBurgerbuns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby’s Burger buns (4pcs) Ksh 120"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbysHotdogbuns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby’s Hot dog buns (4pcs) Ksh 120"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbysFrenchbaguette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby’s French baguette Ksh 150"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbysGarlicbread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby’s Garlic bread Ksh 150"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/KibbysFocassiobread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kibby’s Focassio bread Ksh 150"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <!-- Button to View Cart -->
            <Button
                android:id="@+id/view_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Cart"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@color/design_default_color_primary"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#7A4504"
        app:itemIconTint="@color/icon_yellow"
        app:itemTextColor="@color/icon_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
